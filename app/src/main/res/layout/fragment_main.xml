<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainViewModel"
            type="com.kfjohnny.pokweather.ui.main.MainViewModel" />
        <import type="com.kfjohnny.pokweather.util.extensions.StringExtensionsKt"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment"
        android:padding="@dimen/default_padding_size">

        <EditText
            android:id="@+id/edSearchPokemon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:singleLine="true"
            android:hint="@string/main_pokemon_search_hint"
            android:drawableStart="@drawable/ic_search"
            app:addTextWatcherFunc="@{()->mainViewModel.findPokemons(edSearchPokemon.getText().toString().trim())}"
            android:imeOptions="actionSearch"/>

        <TextView
            android:id="@+id/txtPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{StringExtensionsKt.upperCaseFirstCharacter(mainViewModel.pokemonData.pokemonName)}"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edSearchPokemon" />

        <ImageView
            android:id="@+id/imgPokemonPic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:glideSrc="@{@string/image_resource_api_base_url + mainViewModel.pokemonData.pokemonId+ @string/image_resource_png_extension_type}"
            app:layout_constraintTop_toBottomOf="@id/txtPokemonName"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPokemons"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:listitem="@layout/item_pokemon_grid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtPokemonName"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
