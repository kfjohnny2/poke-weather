<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainViewModel"
            type="com.kfjohnny.pokweather.ui.main.MainViewModel" />
        <import type="com.kfjohnny.pokweather.util.extensions.StringExtensionsKt"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

        <EditText
            android:id="@+id/edSearchPokemon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/main_pokemon_name_or_id_hint"
            android:drawableStart="@drawable/ic_search"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:imeOptions="actionSearch"
            app:onImeOption="@{()->mainViewModel.loadPokemon(edSearchPokemon.getText().toString())}"/>

        <TextView
            android:id="@+id/txtPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{StringExtensionsKt.upperCaseFirstCharacter(mainViewModel.pokemonData.pokemonName)}"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edSearchPokemon" />

        <ImageView
            android:id="@+id/imgPokemonPic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:glideSrc="@{mainViewModel.pokemonData.sprites.frontDefault}"
            app:layout_constraintTop_toBottomOf="@id/txtPokemonName"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
