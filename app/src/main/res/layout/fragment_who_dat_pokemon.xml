<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="whoDatPokemonViewModel"
            type="com.kfjohnny.pokweather.ui.whodatpokemon.WhoDatPokemonViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding_size"
        tools:context=".ui.whodatpokemon.WhoDatPokemonFragment">

        <ImageView
            android:id="@+id/ivWhoDatPokemon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:glideSrc="@{@string/image_resource_api_base_url + whoDatPokemonViewModel.pokemonData.pokemonId+ @string/image_resource_png_extension_type }" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ilGuessPokemon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/main_pokemon_search_hint"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_search"
            app:layout_constraintTop_toBottomOf="@id/ivWhoDatPokemon"
            android:layout_marginTop="@dimen/default_vertical_margin"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edGuessPokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavGuessState"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/ilGuessPokemon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_fileName="right_guess.json"
            app:lottie_autoPlay="true"
            android:visibility="gone"
            tools:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
